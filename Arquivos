def ler_arq():
    arq = open("movimentos.txt","r")
    lista = arq.readlines()
    for linha in lista:
        num = linha.split("#")
        num1 = int(num[0])
        num2 = int(num[1])
        num3 = int(num[2])
        matriz[num1][num2]+=num3
    for i in range(5):
