import pickle

def ler_arquivo_bin():
    f = open("população.jlf","rb")
    matriz = pickle.load(f)
    f.close()
    return matriz
    # print(matriz)
    

matriz = ler_arquivo_bin()


def menor_5mil():
    lista_5menor = []
    for i in range(5):
        for y in range(7):
            if matriz[i][y] < 5:
                lista_5menor.append(f"({i},{y})")
    return lista_5menor
menor = menor_5mil()
        

def soma_popu():
    soma = 0
    for i in range(5):
        for y in range(7):
            soma += matriz[i][y]
    return soma
        
soma_ = soma_popu()

arq = open("Levantamento_demografico.txt","w")
arq.write("="*40+"\n")
arq.write("Levantamento demografico 2024\n")
arq.write(str(soma_)+"MIL Habitantes\n")
arq.write("Regioes com menos de 5mil Habitantes"+str(menor)+"\n")
arq.write("="*40)




arq.close()

